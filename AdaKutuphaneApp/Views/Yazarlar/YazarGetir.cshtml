@model AdaKutuphaneApp.Models.Entity.tblYazarlar
@{
    ViewBag.Title = "YazarGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("YazarGuncelle", "Yazarlar", FormMethod.Post))
{
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Yazar Güncelle</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Anasayfas</a></li>
                        <li class="breadcrumb-item active">Yazar Güncelle</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-6">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Yazar Güncelle</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form method="post">
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="KategoriID">Yazar ID</label>
                                    @Html.TextBoxFor(yazar => yazar.ID, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label for="YazarAd">Yazar Adı</label>
                                    @Html.TextBoxFor(yazar => yazar.AD, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label for="YazarSoyad">Yazar Soyadı</label>
                                    @Html.TextBoxFor(yazar => yazar.SOYAD, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label for="Detay">Detay</label>
                                    @Html.TextAreaFor(yazar => yazar.DETAY, new { @class = "form-control" })
                                </div>
                            </div>
                            <!-- /.card-body -->

                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">Güncelle</button>
                            </div>
                        </form>
                    </div>
                    <!-- /.card -->


                </div>
                <!--/.col (left) -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
}
