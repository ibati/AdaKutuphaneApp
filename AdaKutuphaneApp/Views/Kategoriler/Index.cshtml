@using AdaKutuphaneApp.Models.Entity
@model List<tblKategoriler>
@{
    ViewBag.Title = "Kategori Listesi";
    Layout = "~/Views/Shared/Layout.cshtml";
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Kategoriler</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Anasayfa</a></li>
                    <li class="breadcrumb-item active">Kategoriler</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title"><button onclick="window.location.href='/Kategoriler/KategoriEkle'" type="button" class="btn btn btn-primary"><i class="fas fa-edit"></i> Yeni Kategori Ekle</button></h3>
                    </div>
                    <div class="card-body">
                        <table id="datatable1" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th width="5%">ID</th>
                                    <th width="80%">Kategori Adı</th>
                                    <th width="15%">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var kategori in Model)
                                {
                                    <tr>
                                        <td>@kategori.ID</td>
                                        <td>@kategori.AD</td>
                                        <td>
                                            <button type="button" onclick="window.location.href='/Kategoriler/KategoriGetir/@kategori.ID'" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-draw-polygon"></i>
                                                Güncelle
                                            </button>

                                            <button type="button" onclick="window.location.href='/Kategoriler/KategoriSil/@kategori.ID'" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash-alt"></i> Sil
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>ID</th>
                                    <th>Kategori Adı</th>
                                    <th>İşlemler</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->
