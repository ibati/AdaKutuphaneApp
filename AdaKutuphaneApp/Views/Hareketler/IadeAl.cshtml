@model AdaKutuphaneApp.Models.Entity.tblHareketler

@{
    ViewBag.Title = "Ödünç Geri Alma";
    Layout = "~/Views/Shared/Layout.cshtml";
}


@using (Html.BeginForm("IadeTamamla", "Hareketler", FormMethod.Post))
{
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Kitap Güncelle</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Anasayfas</a></li>
                        <li class="breadcrumb-item active">Kitap Güncelle</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-6">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Kitap Güncelle</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form method="post">
                            <div class="card-body">
                                <div class="form-group">
                                    <label>Hareket ID</label>
                                    @Html.TextBoxFor(odunc => odunc.ID, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label>Üye Adı</label>
                                    @Html.DropDownListFor(odunc => odunc.tblUyeler.ID, (List<SelectListItem>)ViewBag.uyesec, "--- Üye seçiniz ---", new { @class = "form-control select2", required = "Üye seçiniz" })
                                </div>
                                <div class="form-group">
                                    <label>Kitap Adı</label>
                                    @Html.DropDownListFor(odunc => odunc.tblKitaplar.ID, (List<SelectListItem>)ViewBag.kitapsec, "--- Kitap seçiniz ---", new { @class = "form-control select2", required = "Kitap seçiniz" })
                                </div>
                                <div class="form-group">
                                    <label>Personel Adı</label>
                                    @Html.DropDownListFor(odunc => odunc.tblPersoneller.ID, (List<SelectListItem>)ViewBag.personelsec, "--- Personel seçiniz ---", new { @class = "form-control select2", required = "Personel seçiniz" })
                                </div>
                                <div class="form-group">
                                    <label>Kitap Alış Tarihi</label>
                                    @Html.TextBoxFor(odunc => odunc.ALISTARIH, "{0: dd.MM.yyyy}", new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label>Kitap İade Tarihi</label>
                                    @Html.TextBoxFor(odunc => odunc.IADETARIH, "{0: dd.MM.yyyy}", new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label>Üyenin Getirdiği Tarih</label>
                                    <input type="text" class="form-control" name="UYEGETIRTARIH" value="@DateTime.Now.ToShortDateString()" />
                                </div>
                                <div class="form-group">
                                    <label>Geç Gelen Gün Sayısı</label>
                                    <input type="text" class="form-control" name="ggs" id="ggs" value="@ViewBag.ggs" />
                                </div>
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">Güncelle</button>
                            </div>
                        </form>
                    </div>
                    <!-- /.card -->
                </div>
                <!--/.col (left) -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
}

@section scripts {
    <script>
        $(function () {
            //Initialize Select2 Elements
            $('.select2').select2()

            //Initialize Select2 Elements
            $('.select2bs4').select2({
                theme: 'bootstrap4'
            })
        })
    </script>
}