@model AdaKutuphaneApp.Models.Entity.tblHareketler
@{
    ViewBag.Title = "Ödünç Verme";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Ödünç Ver</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Anasayfas</a></li>
                    <li class="breadcrumb-item active">Ödünç Ver</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Ödünç Ver</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form method="post">
                        <div class="card-body">
                            <div class="form-group">
                                <label>Üye Adı</label>
                                @Html.DropDownListFor(odunc => odunc.tblUyeler.ID, (List<SelectListItem>)ViewBag.uyesec, "--- Üye seçiniz ---", new { @class = "form-control select2", required = "Üye seçiniz" })
                            </div>
                            <div class="form-group">
                                <label>Kitap Adı</label>
                                @Html.DropDownListFor(odunc => odunc.tblKitaplar.ID, (List<SelectListItem>)ViewBag.kitapsec, "--- Kitap seçiniz ---", new { @class = "form-control select2", required = "Kitap seçiniz" })
                            </div>
                            <div class="form-group">
                                <label>Personel Adı</label>
                                @Html.DropDownListFor(odunc => odunc.tblPersoneller.ID, (List<SelectListItem>)ViewBag.personelsec, "--- Personel seçiniz ---", new { @class = "form-control select2", required = "Personel seçiniz" })
                            </div>
                            <div class="form-group">
                                <label>Kitap Alış Tarihi</label>
                                <input type="datetime" class="form-control" name="ALISTARIH" value="@DateTime.Now.ToShortDateString()" />
                            </div>
                            <div class="form-group">
                                <label>Kitap İade Tarihi</label>
                                <input type="datetime" class="form-control" name="IADETARIH" value="@DateTime.Now.AddDays(7).ToShortDateString()" />
                            </div>

                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Kitap Ekle</button>
                        </div>
                    </form>
                </div>
                <!-- /.card -->


            </div>
            <!--/.col (left) -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->
